        android:allowBackup="true"
        android:icon="@drawable/logo_pasto"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.termex.pasto.Vue.Accueil"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.termex.pasto.Vue.Pizzas"
            android:label="@string/app_name" />
        <activity
            android:name="com.termex.pasto.Vue.Statistique"
            android:label="@string/app_name" />
        
    </application>

</manifest>
